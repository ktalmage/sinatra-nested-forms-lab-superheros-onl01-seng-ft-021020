    <label for="member3_name">Hero #3 Power:</label>
    <input type="text" id="member3_power" name="team[members][2][power]">
    <label for="member3_name">Hero #3 Bio:</label>
    <input type="text" id="member3_bio" name="team[members][2][bio]">
    
    <br/>
    <input type="submit" value="submit">
    </form>
  </body>
</html>

    
